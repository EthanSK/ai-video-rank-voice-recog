{
  "manifest_version": 3,
  "name": "Arena Helper",
  "version": "0.1.0",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://artificialanalysis.ai/*",
    "http://localhost:7777/*"
  ],
  "content_scripts": [{
    "matches": ["https://artificialanalysis.ai/text-to-video/arena*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "background": { 
    "service_worker": "bg.js" 
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Arena Helper"
  }
}